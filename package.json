{
  "name": "react-example",
  "private": true,
  "version": "0.0.0",
  "description": "LootingRPG Game App",
  "author": "lusenhehe@163.com",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite --port=3000 --host=0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.{ts,tsx}\" && npm run check:arch",
    "check:arch": "node scripts/checkArchitecture.js",
    "check:orphan": "node scripts/checkOrphans.js",
    "electron:serve": "electron .",
    "electron:build": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-react": "^5.0.4",
    "glob": "^8.1.0",
    "i18next": "^25.8.13",
    "lucide-react": "^0.546.0",
    "motion": "^12.34.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^16.5.4",
    "vite": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  },
  "build": {
    "appId": "com.lootingrpg.app",
    "productName": "LootingRPG",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "win": {
      "target": [
        "dir"
      ],
      "certificateSubjectName": "",
      "signAndEditExecutable": false
    }
  }
}
